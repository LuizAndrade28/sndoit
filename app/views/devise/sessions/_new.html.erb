<%# <h2>Log in</h2> %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="form-login">
    <div class="form-inputs mt-4 mb-3">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <div class="d-flex justify-content-between">
        <%= f.button :submit, "Log in", class: "login-btn login-btn__width" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "login-btn login-btn__width" %>
      </div>
      <div class="d-flex my-3">
        <hr class="w-50">
        <p class="mx-2">Or</p>
        <hr class="w-50">
      </div>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "login-btn login-btn__test"%>
    </div>
  </div>
<% end %>
